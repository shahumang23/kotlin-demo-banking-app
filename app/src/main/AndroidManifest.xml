<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_weird_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme.DayNight">

        <activity
            android:name="com.example.myapplication.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myapplication.MainActivity"
            android:parentActivityName="com.example.myapplication.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.MainActivity"/>
        </activity>
    </application>

</manifest>